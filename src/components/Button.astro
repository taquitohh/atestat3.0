---
export interface Props {

	href: string;
}

const { href } = Astro.props;
---

<a class="button" href={href}>
    <div>
        <slot></slot>
    </div>
</a>


<style>

a:hover{ 
    background-color: #00ffe5da;
}

a {
    
    font-size: 28px;
    letter-spacing: 0.5px;
    padding: 16px 26px;
    background-color: #127bd1d2;
	border-radius: 2px;
    transition: all 0.3s;
    z-index: 1;
}

div {
    color: #000000;
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;
    height: 100%;
}
</style>
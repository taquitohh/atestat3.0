---
export interface Props {
	bg: string;
}

const { bg } = Astro.props;

---

<div class="main">
    <img src={bg}>
    <slot></slot>
</div>

<style>
    .main {
        background-size: cover;
        width: 100%;
        height: 100vh;
        position: relative;
    }
    img {
        position: absolute;
        width: 100%;
        height: 100vh;
        object-fit: cover;
        z-index: -1;
    }

</style>
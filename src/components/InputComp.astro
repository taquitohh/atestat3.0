---
export interface Props {

label: string;
}

const { label } = Astro.props;
---

<div class="input-block">
	<input type="text" placeholder="."/>
    <label for="">{label}</label>
    
</div>

<style>
div {
	border: none;
	width: 100%;
	height: 60px;
	border-bottom: 2px solid #c0392b;
	margin: 0;
	position: relative;
	
}

label {
	position: absolute;
	left: 10px;
	top: 16px;
	color: #fff;
	font-size: 1.8em;
	transition: all 0.3s;
}
input {
	background-color: transparent;
	margin: 0;
	outline: none;
	border: none;
	font-family: Scout;
	padding: 30px 10px;
	width: 100%;
	position: relative;
	z-index: 2;
	font-size: 1.2em;
	letter-spacing: 0.5px;
	color: #fff;
}
input::-webkit-input-placeholder {
 opacity: 0;
}
input:not(:placeholder-shown) + label, input:focus + label{
	top: -5px;
	left: 5px;
	font-size: 1.5em;
}
</style>
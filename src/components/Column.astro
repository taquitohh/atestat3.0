---
export interface Props {
	title: string;
}

const { title } = Astro.props;

---
<div>
    <p>{title}</p>
    <div>
        <slot></slot>
    </div>
</div>


<style>
    div {
        display: flex;
        flex-direction: column;
        gap: 12px;
    }

    p {
        color: #edf0f1;
		font-size: 35px;
		padding-bottom: 5px;
		letter-spacing: 0.5px;
    }
</style>
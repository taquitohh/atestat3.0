<style>
	.op_title {
		
		color: #EDF0F1;
		opacity: 90%;
        padding:30px;
		font-size:50px;
	}

	div {
        display:flex;
        flex-direction: column;
	}

	body {
        background-image: url(background/background.jpg);
        background-repeat: repeat-y;
        background-size: contain;
    }
    
    .text1{
        color: #EDF0F1;
		font-size:25px;
        letter-spacing: 0.5px;
    }

    .text2{
        color: #EDF0F1;
		font-size:38px;
        padding-bottom: 100px;
        letter-spacing: 0.5px;
        height: 50px;
        filter: drop-shadow(2px 2px 2px #151d30);
    }

	ul1 {
		display:table-row;
		flex-wrap: wrap;
		justify-content: center;
		align-self: center;
		padding:50px;
		gap: 1em;
	}
 
	main {
		display: flex;
		flex-direction:column;
		align-items: center;
		padding: 1.5rem;
        padding-top: 100px;
		max-width: auto;
        margin-left:200px;
        margin-right:200px;
	}
   
	h1 {
        display:flex;
		font-size: 5rem;
		font-weight: 800;
        padding: 15px;
		align-self: center;
		max-width: auto;
	}

	.iconitza {
        width: 48px;
		filter: invert(100%) drop-shadow(2px 2px 2px #151d30);
	}

	.text-gradient {
		background-image: var(--accent-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;
        filter: drop-shadow(2px 2px 2px #151d30);

	}
	.instructions {
		line-height: 1.6;
		margin: 1rem 0;
		border: 1px solid rgba(var(--accent), 25%);
		background-color: rgb(255, 255, 255);
		padding: 1rem;
		border-radius: 0.4rem;
	}
	.instructions code {
		font-size: 0.875em;
		font-weight: bold;
		background: rgba(var(--accent), 12%);
		color: rgb(var(--accent));
		border-radius: 4px;
		padding: 0.3em 0.45em;
	}

	.instructions strong {
		color: rgb(var(--accent));
	}

	.link-card-grid {
		display: flex;
		grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
		gap: 10px;
		padding: 0;
	}
</style>
